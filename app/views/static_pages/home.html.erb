<% if logged_in? %>
	<div class="row">
		<aside class="col-md-4">
			<section class="user_info">
				<%= render 'shared/user_info' %>
				<section class="stats">
				<%= render 'shared/stats' %>
				</section>
			</section>
			<section class="micropost_form">
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class="col-md-8">
			<h3>Micropost Feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>

	<% provide(:title, 'Home') %>
	<div class="jumbotron">
		<h1><%= current_user&.name %></h1>
		<p>Find me in app/views/static_pages/home.html.erb</p>
		<center>
			<%= link_to 'test', '#', class: 'btn btn-info btn-lg' %>
		</center>
	</div>

<% end %>
